{
  "name": "eslint-plugin-ezlint",
  "version": "1.0.29",
  "description": "The eslint config that goes perfectly with your prettier config.",
  "private": "true",
  "main": "./src/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "lint": "eslint -c ./.eslintrc.json --ignore-path ./.eslintignore 'src/**/*.{js,jsx,tsx,ts,d.ts,cjs,mjs}'",
    "lint-fix": "eslint --fix -c ./.eslintrc.json --ignore-path ./.eslintignore 'src/**/*.{js,jsx,tsx,ts,d.ts,cjs,mjs}'",
    "format": "prettier . --check --config ./.prettierrc.js --ignore-path .prettierignore",
    "format-fix": "prettier . --write --config ./.prettierrc.js --ignore-path .prettierignore",
    "build": "tsup --config tsup.config.js",
    "test": "node --test",
    "preversion": "npm test",
    "version": "npm run format && npm run build",
    "postversion": "git push && git push --tags && cd dist && npm publish",
    "prepare": "husky install"
  },
  "keywords": ["eslint", "eslintplugin", "eslint-plugin", "ezlint", "eslint-plugin-ezlint"],
  "repository": {
    "type": "git",
    "url": "https://github.com/talkohavy/eslint-plugin-ezlint"
  },
  "bugs": {
    "url": "https://github.com/talkohavy/eslint-plugin-ezlint/issues",
    "email": "talkohavy@gmail.com"
  },
  "sideEffects": false,
  "author": "Tal Kohavy",
  "contributors": [
    {
      "name": "Tal Kohavy",
      "email": "talkohavy@gmail.com",
      "url": "https://github.com/talkohavy"
    }
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "restricted"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-sort-exports": "^0.8.0"
  },
  "devDependencies": {
    "eslint": "^8.19.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1"
  },
  "engines": {
    "node": "^14.17.0 || ^16.0.0 || >= 18.0.0"
  },
  "peerDependencies": {
    "eslint": ">=7"
  },
  "license": "MIT"
}
