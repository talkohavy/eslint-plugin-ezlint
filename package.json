{
  "name": "eslint-plugin-ezlint",
  "version": "1.6.2",
  "description": "The eslint config that goes perfectly with your prettier config.",
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "lint": "eslint -c ./.eslintrc.json --ignore-path ./.eslintignore 'src/**/*.{js,jsx,tsx,ts,d.ts,cjs,mjs}'",
    "lint-fix": "eslint --fix -c ./.eslintrc.json --ignore-path ./.eslintignore 'src/**/*.{js,jsx,tsx,ts,d.ts,cjs,mjs}'",
    "format": "biome format --verbose ./src",
    "format-fix": "biome format --verbose ./src --write",
    "format-prettier": "prettier . --check --config ./.prettierrc.mjs --ignore-path .prettierignore",
    "format-prettier-fix": "prettier . --write --config ./.prettierrc.mjs --ignore-path .prettierignore",
    "build": "tsup --config tsup.config.js",
    "test": "node --test",
    "cs-add": "pnpm changeset add",
    "cs-status": "pnpm changeset status --verbose",
    "cs-bump": "npm test && pnpm changeset version",
    "cs-publish": "npm run build && pnpm changeset publish && git push --follow-tags",
    "old-way-preversion": "npm test",
    "old-way-version": "npm run format-fix && npm run build",
    "old-way-postversion": "git push && git push --tags && cd dist && npm publish"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "ezlint",
    "eslint-plugin-ezlint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/talkohavy/eslint-plugin-ezlint"
  },
  "bugs": {
    "url": "https://github.com/talkohavy/eslint-plugin-ezlint/issues",
    "email": "talkohavy@gmail.com"
  },
  "sideEffects": false,
  "author": "Tal Kohavy",
  "contributors": [
    {
      "name": "Tal Kohavy",
      "email": "talkohavy@gmail.com",
      "url": "https://github.com/talkohavy"
    }
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-markdown": "^4.0.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-exports": "^0.9.1",
    "eslint-plugin-tailwindcss": "^3.15.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.1",
    "@changesets/cli": "^2.27.3",
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2"
  },
  "engines": {
    "node": "^14.17.0 || ^16.0.0 || >= 18.0.0"
  },
  "peerDependencies": {
    "eslint": ">=8"
  },
  "license": "MIT"
}
